@page
@model Bookworms_Online.Pages.AuditLogsModel
@{
    ViewData["Title"] = "Audit Logs";
}

<h1 class="mb-3">Audit Logs</h1>

@if (Model.Logs.Count == 0)
{
    <p>No audit logs available.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Timestamp (UTC)</th>
                    <th>User ID</th>
                    <th>Action</th>
                    <th>IP Address</th>
                    <th>User Agent</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var log in Model.Logs)
            {
                <tr>
                    <td>@log.Timestamp.ToString("u")</td>
                    <td>@log.UserId</td>
                    <td>@log.Action</td>
                    <td>@(log.IpAddress ?? "-")</td>
                    <td>@(log.UserAgent ?? "-")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
