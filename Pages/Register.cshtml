@page
@model Bookworms_Online.Pages.RegisterModel
@{
}

<div class="container mt-5">

	<div class="row justify-content-center align-items-center">

		<div class="col-sm-12 col-md-12 col-lg-6">
			<h1 class="mb-3">Register </h1>

			<form method="post" enctype="multipart/form-data">
				@Html.AntiForgeryToken()
				<div asp-validation-summary="All" class="text-danger"></div>

				<div class="mb-3">
					<label class="form-label" asp-for="RModel.FirstName">First Name</label>
					<input asp-for="RModel.FirstName" class="form-control" data-filter="letters" />
					<span asp-validation-for="RModel.FirstName" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="RModel.LastName">Last Name</label>
					<input asp-for="RModel.LastName" class="form-control" data-filter="letters" />
					<span asp-validation-for="RModel.LastName" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="RModel.MobileNo">Mobile No</label>
					<input asp-for="RModel.MobileNo" class="form-control" inputmode="numeric" maxlength="8" data-filter="digits" data-max="8" />
					<span asp-validation-for="RModel.MobileNo" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="RModel.BillingAddress">Billing Address</label>
					<textarea asp-for="RModel.BillingAddress" class="form-control" data-filter="no-angle"></textarea>
					<span asp-validation-for="RModel.BillingAddress" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="RModel.ShippingAddress">Shipping Address</label>
					<textarea asp-for="RModel.ShippingAddress" class="form-control"></textarea>
					<span asp-validation-for="RModel.ShippingAddress" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="RModel.CreditCardNo">Credit Card No</label>
					<input asp-for="RModel.CreditCardNo" class="form-control" inputmode="numeric" maxlength="16" data-filter="digits" data-max="16" />
					<span asp-validation-for="RModel.CreditCardNo" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="RModel.Email">Email Address</label>
					<input asp-for="RModel.Email" class="form-control" data-filter="no-angle" />
					<span asp-validation-for="RModel.Email" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="RModel.Password">Password</label>
					<input asp-for="RModel.Password" class="form-control" type="password" id="passwordInput" data-filter="no-angle" />
					<small class="form-text text-muted">Minimum 12 chars, include lower, upper, number, special.</small>
					<div id="passwordStrength" class="form-text"></div>
					<span asp-validation-for="RModel.Password" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="RModel.ConfirmPassword">Confirm Password</label>
					<input asp-for="RModel.ConfirmPassword" class="form-control" type="password" data-filter="no-angle" />
					<span asp-validation-for="RModel.ConfirmPassword" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="RModel.Photo">Photo (.JPG only)</label>
					<input asp-for="RModel.Photo" class="form-control" type="file" accept=".jpg" />
					<span asp-validation-for="RModel.Photo" class="text-danger"></span>
				</div>

				<input type="hidden" asp-for="RModel.RecaptchaToken" />

				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Register</button>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	@if (!string.IsNullOrWhiteSpace(Model.RecaptchaSiteKey))
	{
		<script src="https://www.google.com/recaptcha/api.js?render=@Model.RecaptchaSiteKey"></script>
		<script>
			grecaptcha.ready(function () {
				grecaptcha.execute('@Model.RecaptchaSiteKey', { action: 'register' }).then(function (token) {
					document.querySelector('[name="RModel.RecaptchaToken"]').value = token;
				});
			});
		</script>
	}
	<script>
		const passwordInput = document.getElementById('passwordInput');
		const passwordStrength = document.getElementById('passwordStrength');
		if (passwordInput && passwordStrength) {
			passwordInput.addEventListener('input', function () {
				const value = passwordInput.value || '';
				const lengthOk = value.length >= 12;
				const lowerOk = /[a-z]/.test(value);
				const upperOk = /[A-Z]/.test(value);
				const numberOk = /\d/.test(value);
				const specialOk = /[^A-Za-z0-9]/.test(value);

				const score = [lengthOk, lowerOk, upperOk, numberOk, specialOk].filter(Boolean).length;
				const label = score >= 5 ? 'Strong' : score >= 3 ? 'Medium' : 'Weak';
				const color = score >= 5 ? 'text-success' : score >= 3 ? 'text-warning' : 'text-danger';

				passwordStrength.className = `form-text ${color}`;
				passwordStrength.textContent = `Password strength: ${label}`;
			});
		}
	</script>
}